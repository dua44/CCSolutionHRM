@model IEnumerable<CCSolutionHRM.Models.CustomEmployee>

@{
    ViewBag.Title = "Employee List";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>
<table class="table">
    <tr>
        <th>
            S.No
        </th>
        <th>
            Employee
        </th>
        <th>
            Birth Date
        </th>
        <th>
            Gender
        </th>
        <th>
            Nationality
        </th>

        <th>
            Status
        </th>
        <th>
            Creation Date
        </th>
        <th></th>
    </tr>
    @{ int rowNo = 0; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(rowNo += 1)
            </td>
            <td>
                <strong>Name</strong> : @Html.DisplayFor(modelItem => item.Name) <br />
                <strong>Email</strong> : @Html.DisplayFor(modelItem => item.EmailAddress) <br />
                <strong>Phone Number</strong> : @Html.DisplayFor(modelItem => item.DialingCode1) - @Html.DisplayFor(modelItem => item.PhoneNumber1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @if (item.Delete)
                { @Html.Display("In active", item.Delete) }
                else
                { @Html.Display("Active", item.Delete) }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
